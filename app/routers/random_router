from fastapi import APIRouter,Query,HTTPException
from services.random_service import generate_random_number,generate_random_between
from typing import Annotated

router=APIRouter(
    
    tags=["Random Playground"],
)

@router.get("/random/{max_value}")
async def get_random_number(max_value:int):
    return{
        "max":max_value,
        "random_number":generate_random_number(max_value)
    }

@router.get("/between")
async def get_random_between(
    min_value: Annotated[int, Query(
        title="Minimum Value",
        description="The minimum random number",
        ge=1,
        le=1000,
    )] = 1,
    max_value: Annotated[int, Query(
        title="Maximum Value",
        description="The maximum random number",
        ge=1,
        le=1000,
    )] = 99,
):
    try:
        random_number = generate_random_between(min_value, max_value)
    except ValueError as exc:
        raise HTTPException(status_code=400, detail=str(exc))

    return {
        "min": min_value,
        "max": max_value,
        "random_number": random_number,
    }